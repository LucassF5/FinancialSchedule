<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-lg p-4 bg-light rounded" style="max-width: 400px; width: 100%;">
    <h2 class="text-center text-primary fw-bold mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-semibold text-secondary" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm", placeholder: "Enter your email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label fw-semibold text-secondary" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control shadow-sm", placeholder: "Enter your password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label text-secondary" %>
        </div>
      <% end %>

      <div class="d-grid mb-3">
        <%= f.submit "Log in", class: "btn btn-primary fw-bold shadow-sm py-2" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
