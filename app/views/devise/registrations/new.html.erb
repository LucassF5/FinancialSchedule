<section class="container my-5 d-flex justify-content-center">
  <div class="card p-5 bg-light shadow-lg rounded" style="max-width: 500px; width: 100%;">
    <h2 class="text-center text-primary fw-bold mb-4">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :username, "Username", class: "form-label text-secondary fw-semibold" %>
        <%= f.text_field :username, class: "form-control shadow-sm", placeholder: "Choose a username" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label text-secondary fw-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm", placeholder: "Enter your email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label text-secondary fw-semibold" %>
        <% if @minimum_password_length %>
          <small class="text-muted">(minimum <%= @minimum_password_length %> characters)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow-sm", placeholder: "Create a password" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label text-secondary fw-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow-sm", placeholder: "Confirm your password" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Sign up", class: "btn btn-primary fw-bold shadow-sm py-2" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
